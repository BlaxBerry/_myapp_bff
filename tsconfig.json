{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
  },
  "include": ["src"]
}
